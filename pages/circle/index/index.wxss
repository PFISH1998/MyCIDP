/**index.wxss**/

.container{
  height: 1500rpx;
}
.container .search{
  width: 735rpx;
  height: 65rpx;
  padding: 12.5rpx 0 12.5rpx 15rpx;
  background: #2A8CE5;
}
.container .search-left{
  flex: 8;
  background: #4EA3E7;
  text-align: left;
}
.container .search-left input{
  display: inline-block;
  height: 65rpx;
  font-size: 26rpx;
}
.search-placeholder{
  color: #8CCEFD;
  line-height: 20rpx;
}
.container .search .search-left image{
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 20rpx;
}
.container .search .search-right{
  flex: 1;
}
.container .search .search-right image{
  width: 45rpx;
  height: 45rpx;
  padding: 10rpx;
}

.container{
  padding: 0;
  font-size: 14rpx;
  background: #F0F4F3;
  color: #000;
}
.container .feed-item .feed-source .avatar .head {
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
}
/*feed-item part is in app.wxss for multiplexing*/



.chat-item{
  width: 100%;
  background: #ffffff;
  padding: 25rpx 25rpx 25rpx 0;
  border-bottom: solid 1px #ebebeb;
}

.chat-item-top{
  width: 100%;
  background: #ffffff;
  padding: 25rpx 25rpx 30rpx 0;
  border-bottom: solid 1px #ebebeb;
}


.chat-item  image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
}
.chat-item .avatar{
  flex: 1;
}
.chat-item .chat-content{
  flex: 4;
  text-align: left;
}

.chat-item .chat-content text{
  /*display: block;*/
}

.chat-item .chat-content .chat-source{
  color: #818A8F;
  font-size: 25rpx;
  padding: 4rpx 0 8rpx 0;
}
.chat-item .chat-content .chat-source .chatmate{
  font-size: 29rpx;
  color: #000000;
  text-align: left;
}

.chat-item .chat-content .chat-source-top{
  color: #E64340;
  font-size: 25rpx;
  padding: 4rpx 0 8rpx 0;
}
.chat-item .chat-content .chat-source .chatmate-top{
  font-size: 29rpx;
  color: #E64340;
  text-align: left;
}

.chat-item .chat-content .chat-source .lasttime{
  flex: 1;
  font-size: 22rpx;
  float: right;
  vertical-align: text-bottom;
}

.chat-item .chat-content .chat-txt{
  display: block;
  color: #7b7b7b;
  font-size: 26rpx;
  line-height: 34rpx;
  padding: 10rpx 50rpx 0rpx 0;
}

.chat-item .chat-content .chat-txt-top{
  display: block;
  color: #000000;
  font-size: 28rpx;
  line-height: 40rpx;
  padding: 10rpx 50rpx 0rpx 0;
}


.add_icon{

  position:fixed;
  width: 46px;
  height:46px;
  bottom:20px;
  right:20px;
  box-shadow: 3px 4px 20px #bebebe;
  border-radius:80rpx;
  overflow:hidden;

}