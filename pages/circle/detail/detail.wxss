.container {
  /* height: 1500rpx; */
}

.container .search {
  width: 100%;
  height: 65rpx;
  padding: 12.5rpx 0 12.5rpx 15rpx;
  background: #2A8CE5;
}

.container .search-left {
  flex: 8;
  background: #4EA3E7;
  text-align: left;
}

.container .search-left input {
  display: inline-block;
  height: 65rpx;
  font-size: 26rpx;
}

.search-placeholder {
  color: #8CCEFD;
  line-height: 20rpx;
}

.container .search .search-left image {
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 20rpx;
}

.container .search .search-right {
  flex: 1;
}

.container .search .search-right image {
  width: 45rpx;
  height: 45rpx;
  padding: 10rpx;
}

.container {
  padding: 0;
  font-size: 14rpx;
  background: #F0F4F3;
  color: #000;
}

.container .feed-item .feed-source .avatar .head {
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
}

/*feed-item part is in app.wxss for multiplexing*/



.chat-item {
  width: 750rpx;
  background: #ffffff;
  padding: 25rpx 25rpx 25rpx 25rpx;
  border-bottom: solid 1px #ebebeb;
}

.chat-item image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
}

.chat-item-commments image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 60rpx;
}

.chat-item .avatar {
  flex: 1;
}

.chat-item .avatar-commments {
  /* flex: 1; */
  margin-right: 5px;
  margin-left: 5px;
  width: 60rpx;
  height: 60rpx;
  border-radius: 60rpx;
}


.chat-item .chat-content {
  margin-right: 5px;
  margin-left: 5px;
  flex: 4;
  text-align: left;
}

.chat-item .chat-content text {
