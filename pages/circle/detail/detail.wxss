/**index.wxss**/

.container{
  height: 1500rpx;
}
.container .search{
  width: 735rpx;
  height: 65rpx;
  padding: 12.5rpx 0 12.5rpx 15rpx;
  background: #2A8CE5;
}
.container .search-left{
  flex: 8;
  background: #4EA3E7;
  text-align: left;
}
.container .search-left input{
  display: inline-block;
  height: 65rpx;
  font-size: 26rpx;
}
.search-placeholder{
  color: #8CCEFD;
  line-height: 20rpx;
}
.container .search .search-left image{
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 20rpx;
}
.container .search .search-right{
  flex: 1;
}
.container .search .search-right image{
  width: 45rpx;
  height: 45rpx;
  padding: 10rpx;
}

.container{
  padding: 0;
  font-size: 14rpx;
  background: #F0F4F3;
  color: #000;
}
.container .feed-item .feed-source .avatar .head {
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
}
/*feed-item part is in app.wxss for multiplexing*/



.chat-item{
  width: 725rpx;
  background: #ffffff;
  padding: 25rpx 25rpx 25rpx 25rpx;
  border-bottom: solid 1px #ebebeb;
}
.chat-item  image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
}
.chat-item .avatar{
  flex: 1;
}
.chat-item .chat-content{
  margin-right:5px;
  margin-left:5px;
  flex: 4;
  text-align: left;
}
.chat-item .chat-content text{
  /*display: block;*/
}

/* 内容控制 */
.chat-item .chat-content .chat-source{
  color: rgb(17, 16, 16);  
  font-size: 27rpx;
  padding: 25rpx 0 65rpx 25rpx;
}
.chat-item .chat-content .chat-source .chatmate{
  font-size: 29rpx;
  color: #000000;
  text-align: left;
  padding: 20rpx 0 0rpx 20rpx;
  /* float: left; */
}
.chat-item .chat-content .chat-source .lasttime{
  flex: 1;
  font-size: 22rpx;
  float: right;
  vertical-align: text-bottom;
}
.chat-item .chat-content .chat-txt{
  display: block;
  color: #000000;
  font-size: 29rpx;
  line-height: 35rpx;

}
.chat-item .chat-content .detail-txt{
  display: block;
  color: #000000;
  font-size: 29rpx;
  line-height: 35rpx;
  padding:20rpx 0 10rpx 30rpx;/*更改*/
  /* margin-right:5px;
  margin-left:5px; */

}

.chat-item .chat-content .chat-source .head{
  flex: 1;
  font-size: 22rpx;
  float:left;
